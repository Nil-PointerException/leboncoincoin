# Database Configuration (Local Development)
DB_URL=jdbc:postgresql://localhost:5432/leboncoincoin_db
DB_USERNAME=leboncoincoin_user
DB_PASSWORD=leboncoincoin_password
DB_LOG_SQL=true

# AWS Configuration
AWS_REGION=eu-west-3
S3_BUCKET_NAME=leboncoincoin-bucket

# Email Configuration
# Provider: "smtp" for dev (MailHog), "ses" for prod (Amazon SES)
EMAIL_PROVIDER=smtp
EMAIL_FROM=noreply@leboncoincoin.com
EMAIL_FROM_NAME=LeBonCoinCoin
EMAIL_WELCOME_ENABLED=true

# SMTP Configuration (for dev with MailHog)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_START_TLS=DISABLED

# Clerk Authentication (OIDC)
# Set OIDC_ENABLED=true to enable authentication
OIDC_ENABLED=false
CLERK_AUTH_SERVER_URL=https://your-domain.clerk.accounts.dev/.well-known/openid-configuration
CLERK_ISSUER=https://your-domain.clerk.accounts.dev
CLERK_CLIENT_ID=your_clerk_client_id
CLERK_CLIENT_SECRET=your_clerk_client_secret
CLERK_AUDIENCE=

# CORS Configuration
CORS_ORIGINS=http://localhost:5173

# Production AWS RDS (uncomment for production)
# DB_URL=jdbc:postgresql://your-rds-endpoint.rds.amazonaws.com:5432/leboncoincoin_db
# DB_USERNAME=admin
# DB_PASSWORD=your_secure_password

